@if (Model.Approved == null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Pending Approval</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingStudentId):</strong>  @Model.RequestingStudent.FirstName @Model.RequestingStudent.LastName 's Leave Request <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.RequestDate) - @Html.DisplayFor(model => model.RequestDate)
        </p>
    </div>
}
else if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Approved by @Model.ApprovedBy.UserName </h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingStudentId):</strong> @Model.RequestingStudent.FirstName @Model.RequestingStudent.LastName  <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.RequestDate) - @Html.DisplayFor(model => model.RequestDate)
        </p>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Rejected by @Model.ApprovedBy.UserName @Model.ApprovedBy.UserName</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingStudentId):</strong> @Model.RequestingStudent.FirstName @Model.RequestingStudent.LastName <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.RequestDate) - @Html.DisplayFor(model => model.RequestDate)
        </p>
    </div>
}
<div>

    <hr />
