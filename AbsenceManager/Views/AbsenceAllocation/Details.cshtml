@model AbsenceManager.Models.ViewAbsenceAllocationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details for @Model.Student.FirstName @Model.Student.LastName</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.DateOfBirth)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<h2>Absence Allocations</h2>
<div class="col-6">
    <ul class="list-group">
        @foreach (var item in Model.AbsenceAllocations)
        {
            <li class="list-group-item">
                <h6>@item.AbsenceType.Name <span class="badge badge-secondary">@item.NumberOfDays</span><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa fa-pencil"></i>Edit</a></h6>
            </li>
        }

    </ul>
</div>
